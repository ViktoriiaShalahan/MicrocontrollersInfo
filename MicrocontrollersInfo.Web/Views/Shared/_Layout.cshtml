<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title -MicrocontrollersInfo</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @*@Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
                <a class="navbar-brand hidden-xs hidden-sm" href="/">
                    ПО "Мікроконтролери": інформація про мікроконтролери і типи корпусів
                </a>
                <a class="navbar-brand visible-sm" href="/">
                    ПО "Мікроконтролери": інформація про мікроконтролери
                </a>
                <a class="navbar-brand visible-xs" href="/">ПО "Мікроконтролери"</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    @**@
                    <li>
                        <a href="/Home/About">
                            <span class="glyphicon glyphicon-paperclip" style="color:orange"></span>
                            Про сайт
                        </a>
                    </li>
                    <li>
                        <a href="/Admin/Index">
                            <span class="glyphicon glyphicon-pencil" style="color: orange"></span>
                            Адмін-панель
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">

        @if (TempData["message"] != null)
        {
            <div class="alert alert-success">@TempData["message"]</div>
        }

        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - MicrocontrollersInfo</p>
        </footer>
    </div>

    @*<script src="~/Scripts/jquery-3.4.1.min.js"></script>*@
    <script src="~/Scripts/jquery-1.9.0.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
   
</body>
</html>